<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Home Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class=" bg-green-100">
  <%- include('partials/navbars') %>


  <div style="margin: auto;" class="bg-white shadow-xl rounded-lg p-8 w-full max-w-lg border border-gray-200">
    <h1 class="text-3xl font-bold text-center text-green-600 mb-6">Track Your Medicine</h1>
    <form action="/add" method="POST" class="space-y-6">
      <!-- Name of Medicine -->
      <div>
        <label for="Name" class="block text-sm font-medium text-gray-700">Name of Medicine</label>
        <input
          type="text"
          id="Name"
          name="Name"
          placeholder="Enter medicine name"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
        />
      </div>

      <!-- Dosage -->
      <div>
        <label for="Dosage" class="block text-sm font-medium text-gray-700">Dosage (mg)</label>
        <input
          type="number"
          id="Dosage"
          name="Dosage"
          placeholder="Enter Dosage"
          min="1" max="1000"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
        />
      </div>

      <!-- Frequency -->
      <div>
        <label for="Frequency" class="block text-sm font-medium text-gray-700">Frequency (times per day)</label>
        <input
          type="number"
          id="Frequency"
          name="Frequency"
          placeholder="Enter Frequency"
          min="1" max="5"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
        />
      </div>

      <!-- Select Date -->
      <div class="mb-4">
        <label for="Start" class="block text-gray-700 font-medium mb-2">Select Date</label>
        <input type="date" id="date" name="Start" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" required>
      </div>

      <div class="grid grid-cols-2 gap-4 mb-4">
        <!-- Saturday to Friday Days -->
        <div class="flex items-center">
          <input type="checkbox" id="saturday" name="dayTaken" value="Saturday" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
          <label for="dayTaken" class="ml-2 text-gray-700">Saturday</label>
        </div>
        <div class="flex items-center">
          <input type="checkbox" id="sunday" name="dayTaken" value="Sunday" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
          <label for="dayTaken" class="ml-2 text-gray-700">Sunday</label>
        </div>
        <div class="flex items-center">
          <input type="checkbox" id="monday" name="dayTaken" value="Monday" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
          <label for="dayTaken" class="ml-2 text-gray-700">Monday</label>
        </div>
        <div class="flex items-center">
          <input type="checkbox" id="tuesday" name="dayTaken" value="Tuesday" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
          <label for="dayTaken" class="ml-2 text-gray-700">Tuesday</label>
        </div>
        <div class="flex items-center">
          <input type="checkbox" id="wednesday" name="dayTaken" value="Wednesday" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
          <label for="dayTaken" class="ml-2 text-gray-700">Wednesday</label>
        </div>
        <div class="flex items-center">
          <input type="checkbox" id="thursday" name="dayTaken" value="Thursday" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
          <label for="dayTaken" class="ml-2 text-gray-700">Thursday</label>
        </div>
        <div class="flex items-center">
          <input type="checkbox" id="friday" name="dayTaken" value="Friday" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
          <label for="dayTaken" class="ml-2 text-gray-700">Friday</label>
        </div>
      </div>



      <div class="mb-4">
        <label for="Time" class="block text-gray-700 font-medium mb-2">Select Time You Taken Medecine</label>
        <input type="time" id="time" name="Time" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" required>
      </div> 


      <!-- <div class="mb-4">
        <label for="day" class="block text-gray-700 font-medium mb-2">Select Day</label>
        <select id="day" name="day" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400">
          <option value="monday">Monday</option>
          <option value="tuesday">Tuesday</option>
          <option value="wednesday">Wednesday</option>
          <option value="thursday">Thursday</option>
          <option value="friday">Friday</option>
          <option value="saturday">Saturday</option>
          <option value="sunday">Sunday</option>
        </select>
      </div>

      <div class="mb-4">
        <label for="hour" class="block text-gray-700 font-medium mb-2">Select Hour</label>
        <input type="number" id="hour" name="hour" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" min="1" max="12" placeholder="Hour (1-12)" required>
      </div> -->

      <!-- Save Button -->
      <div class="text-center">
        <button
          type="submit"
          class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-green-500"
        >
          Save Medicine
        </button>
      </div>
    </form>
  </div>

  <script>
    const btn = document.querySelector(".mobile-menu-button");
    const menu = document.querySelector(".mobile-menu");
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  </script>
</body>
</html>
